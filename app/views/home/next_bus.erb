<div class="d-flex justify-content-center align-items-center h-100 flex-column">
  <div class="title time-clock mt-4"></div>
  <div class="avatar-logo">
    <img src="logo.png" height="100" width="100" />
  </div>
  <div class="description mb-2" style="text-align: center;">
    Você está no ponto de ônibus <br>
    <b><%= @spot_name %></b>
  </div>

  <div class="bus d-flex flex-wrap mt-2 justify-content-center">
    <% @list_bus.sort_by { |st| -st[:delay].to_i }.reverse.each do |bus| %>
      <div class="bus-item rounded p-2 m-2 d-flex flex-row">
        <div class="bus-icon d-flex justify-content-center">
          <%if bus[:delay] <= 1%>
            <div class="bus-status more1 rounded-circle d-flex justify-content-center align-items-center"><%= bus[:delay]%> min.</div>
          <%elsif bus[:delay] <= 15 %>
            <div class="bus-status more5 rounded-circle d-flex justify-content-center align-items-center"><%= bus[:delay]%> min.</div>
          <%else%>
            <div class="bus-status more10 rounded-circle d-flex justify-content-center align-items-center">+<%= bus[:delay]%> min.</div>
          <%end%>
        </div>
        <span class="bus-text d-flex justify-content-center align-items-center ml-3 mr-3"><%= bus[:name]%></span>
      </div>
    <% end %>
  </div> 

  <a class='btn btn-info btn-back' href="<%= index_path %>"> voltar </a>

</div>